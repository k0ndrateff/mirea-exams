---
import { Icon } from 'astro-icon';

interface Props {
  heading: string;
  icon: string;
  link: string;
}

const { heading, icon, link } = Astro.props;
---

<a href={link}>
  <div class="root">
    <h3>{heading}</h3>

    <Icon name={icon} class="icon" />
  </div>
</a>

<style>
  .root {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 156px;
    padding: 16px;

    background: var(--background-block);
    border-radius: 16px;
    box-shadow: var(--shadow-main);
    transition: 500ms;

    &:hover {
      box-shadow: var(--shadow-pressed);
      transition: none;
    }

    @media (max-width: 700px) {
      padding: 12px;
      min-height: 90px;
    }
  }

  h3 {
    font-size: 24px;
    font-weight: 500;
    line-height: 38px;
    color: var(--primary-text);

    @media (max-width: 1410px) {
      font-size: 20px;
      line-height: 34px;
    }

    @media (max-width: 700px) {
      font-size: 18px;
      line-height: 28px;
    }
  }

  .icon {
    position: absolute;
    bottom: 0;
    right: 8px;
    width: 72px;
    height: auto;
    z-index: 2;
    flex-shrink: 0;
    fill: var(--primary-text);

    transition: 500ms;

    @media (max-width: 1260px) {
      width: 52px;
    }
  }
</style>
