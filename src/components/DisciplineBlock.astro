---
import { Icon } from 'astro-icon';

interface Props {
  heading: string;
  icon: string;
  link: string;
  hoverColor: string;
}

const { heading, icon, link, hoverColor } = Astro.props;
---

<a href={link}>
  <div class="root">
    <h3>{heading}</h3>

    <Icon name={icon} class="icon" />
  </div>
</a>

<style define:vars={{hcolor: hoverColor}}>
  .root {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 110px;
    padding: 16px;

    border: 1px solid black;
    border-radius: 12px;
  }

  .root:hover {
    border: 1px solid var(--hcolor);

    .icon {
      fill: var(--hcolor);
    }
  }

  h3 {
    font-size: 24px;
    line-height: 38px;
  }

  .icon {
    position: absolute;
    bottom: 0;
    right: 8px;
    width: 64px;
    height: auto;
  }
</style>
